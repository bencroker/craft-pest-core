{# set a cookie that we can test for #}
{% do craft.app.response.cookies.add(create({
    class: '\\yii\\web\\Cookie',
    name: 'cookieName',
    value: 'cookieValue',
})) %}

{# set an expired cookie that we can test for #}
{% do craft.app.response.cookies.add(create({
    class: '\\yii\\web\\Cookie',
    name: 'expiredCookieName',
    expire: -100,
})) %}
